{{#if venta}}
    
<div class="container editorVenta">

    <form action="/registroVentas/editar/{{venta._id}}" method="POST">
        
        <div class="row">
            <div class="col-md-4">
                <h4 class="mt-4 mb-3">Vaso de nieve</h4>
                <label class="sr-only" for="vasoChico">Chico</label>
                <input type="number" value={{venta.vasoChico}} id="vasoChico" name="vasoChico" class="form-control estilo-input" placeholder="cantidad" min="0" max="50" autofocus>
                <label class="sr-only" for="vasoMediano">Mediano</label>
                <input type="number" value={{venta.vasoMediano}} id="vasoMediano" name="vasoMediano" class="form-control estilo-input" placeholder="cantidad" min="0" max="50" autofocus>
                <label class="sr-only" for="vasoGrande">Grande</label>
                <input type="number" value={{venta.vasoGrande}} id="vasoGrande" name="vasoGrande" class="form-control estilo-input" placeholder="cantidad" min="0" max="50" autofocus>
            </div>
            <div class="col-md-4">
                <h4 class="mt-4 mb-3">Cono de nieve</h4>
                <label class="sr-only" for="conoChico">Chico</label>
                <input type="number" value={{venta.conoChico}} id="conoChico" name="conoChico" class="form-control estilo-input" placeholder="cantidad" min="0" max="50" autofocus>
                <label class="sr-only" for="conoMediano">Mediano</label>
                <input type="number" value={{venta.conoMediano}} id="conoMediano" name="conoMediano" class="form-control estilo-input" placeholder="cantidad" min="0" max="50" autofocus>
                <label class="sr-only" for="conoGrande">Grande</label>
                <input type="number" value={{venta.conoGrande}} id="conoGrande" name="conoGrande" class="form-control estilo-input" placeholder="cantidad" min="0" max="50" autofocus>
            </div>
            <div class="col-md-4">
                <h4 class="mt-4 mb-3">Agua</h4>
                <label class="sr-only" for="aguaChica">Chica</label>
                <input type="number" value={{venta.aguaChica}} id="aguaChica" name="aguaChica" class="form-control estilo-input" placeholder="cantidad" min="0" max="50" autofocus>
                <label class="sr-only" for="aguaMediana">Mediana</label>
                <input type="number" value={{venta.aguaMediana}} id="aguaMediana" name="aguaMediana" class="form-control estilo-input" placeholder="cantidad" min="0" max="50" autofocus>
                <label class="sr-only" for="aguaGrande">Grande</label>
                <input type="number" value={{venta.aguaGrande}} id="aguaGrande" name="aguaGrande" class="form-control estilo-input" placeholder="cantidad" min="0" max="50" autofocus>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4 mt-5">
                <h4 class="mt-4 mb-3">Ensaladas</h4>
                <label class="sr-only" for="ensaladaChica">Chica</label>
                <input type="number" value={{venta.ensaladaChica}} id="ensaladaChica" name="ensaladaChica" class="form-control estilo-input" placeholder="cantidad" min="0" max="50" autofocus>
                <label class="sr-only" for="ensaladaGrande">Grande</label>
                <input type="number" value={{venta.ensaladaGrande}} id="ensaladaGrande" name="ensaladaGrande" class="form-control estilo-input" placeholder="cantidad" min="0" max="50" autofocus>
            </div>
            <div class="col-md-4 mt-5">
                <h4 class="mt-4 mb-3">Paletas</h4>
                <label class="sr-only" for="paletaAgua">Agua</label>
                <input type="number" value={{venta.paletaAgua}} id="paletaAgua" name="paletaAgua" class="form-control estilo-input" placeholder="cantidad" min="0" max="50" autofocus>
                <label class="sr-only" for="paletaLeche">Leche</label>
                <input type="number" value={{venta.paletaLeche}} id="paletaLeche" name="paletaLeche" class="form-control estilo-input" placeholder="cantidad" min="0" max="50" autofocus>
            </div>
            <div class="col-md-4 mt-5">
                <h4 class="mt-4 mb-3">Nachos</h4>
                <input type="number" value={{venta.nachos}} id="nachos" name="nachos" class="form-control estilo-input mt-4" placeholder="cantidad" min="0" max="20" autofocus>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col">
                <button type="submit" class="btn btn-lg btn-success boton">Confirmar</button>
            </div>
        </div>
        <input type="hidden" name="_csrf" value="{{csrfToken}}" />
    </form>

</div>

{{/if}}